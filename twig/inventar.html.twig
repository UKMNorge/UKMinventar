<style>
body {
	color: #566787;
	background: #f5f5f5;
	font-family: 'Varela Round', sans-serif;
	font-size: 13px;
}
body > .container {
  padding-top: 40px;
  background-color: white;
}
.table-responsive {
    margin: 30px 0;
}

.table-wrapper {
	background: #fff;
	padding: 20px 25px;
	border-radius: 3px;
	min-width: 1000px;
	box-shadow: 0 1px 1px rgba(0,0,0,.05);
}
.table-title {        
	padding-bottom: 15px;
	background: #435d7d;
	color: #fff;
	padding: 16px 30px;
	min-width: 50%;
	margin: -20px -25px 10px;
	border-radius: 3px 3px 0 0;
	font-size: 24px;
}
.table-title-th {        
	padding-bottom: 15px;
	background: #778899;
	color: #fff;
	padding: 16px 30px;
	min-width: 40%;
	margin: -20px -25px 10px;
	border-radius: 3px 3px 0 0;
	font-size: 18px;
}
.table-title h2 {
	margin: 5px 0 0;
	font-size: 24px;
}
tfoot {
	padding-bottom: 15px;
	background: LightSlateGray;
	color: #fff;
	padding: 16px 30px;
	min-width: 40%;
	margin: -20px -25px 10px;
	border-radius: 3px 3px 0 0;
	font-size: 18px;
}
      dl {
        width: 100%;
        overflow: hidden;
        {# background: #dbe0da; #}
      }
dt {
	float: left;
	width: 26%;
  font-size: 15px;
  font-weight: 400;
  line-height: 1.35;
  min-height: 40px;
  margin-bottom: 0;
  position: sticky;
  word-break: break-word;
}
dd {
  width: 60%;
  font-size: 16px; 
  font-weight: 400; 
  line-height: 1.35;
  color: #000000;
  margin-bottom: 10;
  white-space: pre-wrap;
  word-break: break-word;
}

textarea {
  box-sizing: border-box;
  max-height: 160px; /* optional but recommended */
  min-height: 100px;
  min-width: 20%;
  max-width: 100%;
}
td.tall {
text-align: right;
}

.container {
   display: flex;
   justify-content: space-between;
}
.left-col {
   width: 78%;
}
.right-col {
   margin-top: 40px;
   width: 20%;
}
.qr {
  font-size: 15px;
  font-weight: 400;
  line-height: 1.35;
  min-height: 40px;
  padding: 10px;
}
.aw {
  font-size: 16px; 
  font-weight: 400; 
  line-height: 1.35;
  color: #000000;
  padding: 10px;
  white-space: pre-line;
}
.qr-media {
  font-size: 16px;
  font-weight: 400;
  line-height: 1.2%;

}
.tall {
max-width: 10%;
text-align: right;
}
</style>
<script>
jQuery(document).ready(function () {
    jQuery('#inventoryTable').DataTable({
        fixedHeader: {
            header: true,
            headerOffset: 35,
        },
		order: [[6, 'desc']],
		colReorder: false,
        paging: false,
        ordering: true,
        info: false,
		language: {
			search: "Søk:"
		},
        columnDefs: [
            {
                target: 5,
                render: DataTable.render.number(null, null, 2,),
            },
			{ "width": "10%", "targets": 3 },
        ],
    });
});
         jQuery(document).ready(function(){
            jQuery('[data-toggle = "tooltip"]').tooltip();
         });

jQuery(document).ready(function() {
    jQuery('#inventoryTable').DataTable();
});
</script>

	<div class="container-xl">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-sm-8">
							<h2><b>Inventarliste UKM Norge</b></h2>
						</div>
					</div>
				</div>
    
    <!-- Add Item Button -->
    <a href="?page=UKMinventar_add" class="btn btn-success mb-3">
        <i class="bi bi-plus-circle"></i> Legg til ny
    </a>
    
    <table id="inventoryTable" class="table table-striped table-hover order-column" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kategori</th>
                <th>Gjenstand</th>
				<th>Annet</th>
                <th>Lokasjon</th>
                <th align="right">Innkjøpspris</th>
                <th>Dato kjøpt</th>
                <th>Handlinger</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.item_id }}</td>
                    <td>{{ item.category_name }}</td>
                    <td>{{ item.item_name }}</td>
					<td>{{ item.other }}</td>
                    <td>{{ item.location_name }}</td>
                    <td align="right">{{ item.purchase_cost }}</td>
                    <td>{{ item.purchase_date }}</td>
                    <td>
                        <a href="?page=UKMinventar_edit&item_id={{ item.item_id }}" class="btn btn-primary btn-sm">
                            <i class="dashicons dashicons-edit"></i>
                        </a>
						<a href="?page=UKMinventar&item_id={{ item.item_id }}&do=delete" class="btn btn-danger btn-sm rounded-0" onclick="return confirm('Er du sikker du vil slette {{ item.item_name }}?')" data-id="{{ item.item_id }}"" data-toggle="tooltip" data-placement="top"><i class="dashicons dashicons-trash"></i>
                        {# <a href="#deleteItem"  onclick="return confirm('Er du sikker du vil slette {{ item.item_name }}?')" data-id="{{ item.item_id }}" class="btn btn-danger btn-sm"> #}
                            {# <i class="dashicons dashicons-trash"></i> #}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
